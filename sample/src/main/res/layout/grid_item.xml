<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/selector_grid_item_bg">
     
    <main.sample.FitWidthImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_padding"
        android:layout_marginLeft="@dimen/image_padding"
        android:layout_marginRight="@dimen/image_padding"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/caption_height"
        android:gravity="center"/>
    
</LinearLayout>